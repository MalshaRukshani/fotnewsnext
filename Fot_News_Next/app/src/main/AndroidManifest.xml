<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fot_News_Next"
        tools:targetApi="31">
        <activity
            android:name="com.yourusername.fot_news_next.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yourusername.fot_news_next.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.yourusername.fot_news_next.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.yourusername.fot_news_next.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yourusername.fot_news_next.SportsNewsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.fot_news_next.EventsNewsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.fot_news_next.AcademicNewsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.fot_news_next.HomeActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.fot_news_next.AddNewsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yourusername.fot_news_next.DeveloperInfoActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yourusername.fot_news_next.UserInfoActivity"
            android:label="User Information"
            android:parentActivityName="com.yourusername.fot_news_next.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourusername.fot_news_next.MainActivity" />
        </activity>
        <activity
            android:name="com.yourusername.fot_news_next.NewsDetailActivity"
            android:exported="false"
            android:parentActivityName="com.yourusername.fot_news_next.AcademicNewsActivity"
            android:theme="@style/Theme.Fot_News_Next">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourusername.fot_news_next.AcademicNewsActivity" />
        </activity>
    </application>

</manifest>